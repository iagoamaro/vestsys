@model IEnumerable<vestsys.Models.Entities.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
    <p>
        @Html.ActionLink("Criar Novo", "Inserir")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.senha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUser)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.login)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.senha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoUser)
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { id=item.IdUsuario }) |
                
                @Html.ActionLink("Deletar", "Deletar", new { id=item.IdUsuario })
            </td>
        </tr>
    }
    
    </table>

