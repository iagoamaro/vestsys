<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Sistema de Vestibular", "Index", "Usuario", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Usuários", "Index", "Usuario", new { area = "" }, new { @class = "navbar-brand" })</li>
                    <li>@Html.ActionLink("Vestibulares", "Index", "Vestibular", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Cursos", "Index", "Curso", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Candidatos", "Index", "Candidato", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <div id="divCarregando" style="display:none;">
            <div class="overlay" />
            <div class="overlayContent">
                <h2>Aguarde...</h2>
                <img src="~/Content/ajax_loader_gray_32.gif" alt="Aguarde..." border="1" />
            </div>
        </div>

        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/sistema.js"></script>
</body>
</html>


